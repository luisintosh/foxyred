      <ul>
      <% ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= f.label :position, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static">
        <%= f.select :position, Ad.get_positions, {include_blank: true}, {class: 'form-control'} %>
      </p>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :network, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static">
        <%= f.text_field :network, class: 'form-control' %>
      </p>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :code, class: 'col-sm-2 form-control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static">
        <%= f.text_area :code, class: 'form-control', rows: 15 %>
      </p>
    </div>
  </div>

  <div class="actions text-right">
    <%= f.submit nil, class: 'btn btn-success' %>
  </div>
<% end %>
