<header class="section-header">
  <h1>Ads</h1>
</header>
<section class="card">
  <div class="card-block">
    <div id="toolbar-ads">
      <%= link_to 'New Ad', new_ad_path, class: 'btn btn-primary' %>
    </div>
    <table id="table-ads"
          class="table table-striped table-bordered"
          data-toggle="table"
          data-toolbar="#toolbar-ads"
          data-search="true"
          data-show-refresh="true"
          data-show-toggle="true"
          data-show-columns="true"
          data-show-export="true"
          data-minimum-count-columns="2"
          data-show-pagination-switch="true"
          data-pagination="true"
          data-id-field="id"
          data-page-list="[10, 25, 50, 100, ALL]"
          data-show-footer="false">
          <thead>
            <tr>
              <th>Position</th>
              <th>Network</th>
              <th>Weight</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @ads.each do |ad| %>
              <tr>
                <td><%= ad.position %></td>
                <td><%= ad.network %></td>
                <td><%= ad.weight.to_i %></td>
                <td><%= link_to 'Show', ad, class: 'btn btn-inline btn-primary' %>
                  <%= link_to 'Edit', edit_ad_path(ad), class: 'btn btn-inline btn-primary' %>
                  <%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-inline btn-primary' %></td>
              </tr>
            <% end %>
          </tbody>
    </table>
  </div>
</section><!--.box-typical-->

