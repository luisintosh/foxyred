<section class="row" id="datatabox">
    <div class="col-sm-4">
        <div class="statistic-box red">
            <div>
                <div class="number"><%= @views %></div>
                <div class="caption">
                    <div>Views</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="statistic-box red">
            <div>
                <div class="number">$<%= @earnings.to_s %></div>
                <div class="caption">
                    <div>Earnings</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="statistic-box green">
            <div>
                <div class="number">$<%= (@earnings - @earnings_collected).to_s %></div>
                <div class="caption">
                    <div>Total Available Earnings</div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="card" id="statistics">
    <div class="card-block">
        <div id="chart"></div>
    </div>
</section>
<section class="card">
  <div class="card-block">
    <table id="table-links"
          class="table table-striped table-bordered"
          data-toolbar="#toolbar-links"
          data-search="true"
          data-show-refresh="true"
          data-show-toggle="true"
          data-show-columns="true"
          data-show-export="true"
          data-minimum-count-columns="2"
          data-show-pagination-switch="true"
          data-pagination="true"
          data-id-field="alias"
          data-page-list="[10, 25, 50, 100]"
          data-show-footer="false"
          data-sort-order="desc"
          data-url="/links.json"
          data-side-pagination="server">
    </table>
  </div>
</section><!--.box-typical-->