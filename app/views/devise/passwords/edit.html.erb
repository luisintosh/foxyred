<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'sign-box' }) do |f| %>
  <div class="text-center">
      <%= image_tag 'foxyred.png', class: 'img-responsive' %>
  </div>
  <header class="sign-title">Change your password</header>
  
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: true %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: true %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: 'btn btn-primary' %>
  </div>

  <div class="text-center">
    <p><em>- Or -</em></p>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
