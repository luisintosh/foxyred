<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'sign-box' }) do |f| %>
  <div class="text-center">
      <%= image_tag 'foxyred.png', class: 'img-responsive' %>
  </div>
  <header class="sign-title">Forgot your password?</header>

  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
  </div>

  <div class="text-center">
    <p><em>- Or -</em></p>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
