<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'sign-box'}) do |f| %>
  <%# devise_error_messages! %>
  <div class="text-center">
      <%= image_tag 'foxyred.png', class: 'img-responsive' %>
  </div>
  <header class="sign-title">Sign In</header>

  <div class="form-group">
    <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, class: 'form-control', placeholder: true %>
  </div>

  <div class="form-group">
    <%= f.text_field :address, class: 'form-control', placeholder: true %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: true %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: true %>
    <% if @minimum_password_length %>
    <small><em>(<%= @minimum_password_length %> characters minimum)</em></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-success' %>
  </div>
  
  <div class="text-center">
    <p><em>- Or -</em></p>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

