<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <title>Foxy</title>
    <%= csrf_meta_tags %>
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-58786505bcb77a1a&async=1' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="<%= controller_name %> <%= action_name %>">
    <header class="site-header">
        <div class="container">
            <a href="#" class="site-logo">
                <%= image_tag 'foxyred.png', class: 'hidden-md-down' %>
                <%= image_tag 'foxyred-mob.png', class: 'hidden-lg-up' %>
            </a>
            <div class="site-header-content">
                <div class="site-header-content-in">
                    <div class="site-header-shown">
                        <button type="button" class="burger-right"> <i class="font-icon-menu-addl"></i> </button>
                    </div>
                    <!--.site-header-shown-->
                    <div class="mobile-menu-right-overlay"></div>
                    <div class="site-header-collapsed">
                        <div class="site-header-collapsed-in">
                            <nav class="menu">
                                <ul class="nav nav-pills btn-inline ">
                                    <li class="nav-item">
                                        <%= link_to 'Home', root_path, class: 'nav-link' %>
                                    </li>
                                    <li class="nav-item">
                                        <%= link_to 'Payout rates', rates_path, class: 'nav-link' %>
                                    </li>
                                    <% if user_signed_in? %>
                                    <li class="nav-item">
                                        <%= link_to 'Panel', dashboard_path, class: 'nav-link btn btn-danger' %>
                                    </li>
                                    <% else %>
                                    <li class="nav-item">
                                        <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
                                    </li>
                                    <li class="nav-item">
                                        <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link btn btn-danger' %>
                                    </li>
                                    <% end %>
                                </ul>
                            </nav>
                        </div>
                        <!--.site-header-collapsed-in-->
                    </div>
                    <!--.site-header-collapsed-->
                </div>
                <!--site-header-content-in-->
            </div>
            <!--.site-header-content-->
        </div>
        <!--.container-fluid-->
    </header>
    <%= yield %>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-4 text-left">
                    <a href="#">Privacy police</a> |
                    <%= link_to 'Terms of use', terms_path %>
                </div>
                <div class="col-sm-4 text-center">

                </div>
                <div class="col-sm-4 text-right">
                    Copyright Â© Foxy.red <%= Time.now.year %>
                </div>
            </div>
        </div>
    </footer>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r;
            i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date();
            a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
            a.async = 1;
            a.src = g;
            m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', '<%= Option.get :analytics_id %>', 'auto');
        ga('send', 'pageview');
    </script>
</body>

</html>