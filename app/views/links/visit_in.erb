<section class="content">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 push-md-3">
                <div class="card animated bounce">
                    <div class="card-block text-center">
                        <h4>Please check the captcha box to proceed to the destination page</h4>
                        <p>
                            <%= Ad.where(position: :visitin_ad1).sample %>
                        </p>
                        <p>
                            <%= form_tag("/go/#{@link.alias}", id: 'adlink-captcha') do %>
                            <div class="text-center"><%= recaptcha_tags id: 'g-recaptcha', script: false %></div>
                            <% end %> 
                        </p>
                        <p>
                            <%=Ad.where(position: :visitin_ad2).sample %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3 pull-md-6">
                <%= Ad.where(position: :visitin_ad3).sample %>
            </div>
            <div class="col-6 col-md-3 text-right">
                <%= Ad.where(position: :visitin_ad4).sample %>
            </div>
            <div class="col-12">
                <%= Ad.where(position: :visitin_ad5).sample %>
            </div>
        </div>
    </div>
</section>