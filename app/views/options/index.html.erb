<header class="section-header">
  <div class="tbl">
    <div class="tbl-row">
      <div class="tbl-cell">
        <h2>Options</h2>
      </div>
    </div>
  </div>
</header>

<section class="tabs-section">
  <div class="tabs-section-nav tabs-section-nav-icons">
    <div class="tbl">
      <ul class="nav" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" href="#tabs-1-tab-1" role="tab" data-toggle="tab" aria-expanded="true">
            <span class="nav-link-in">
              <i class="glyphicon glyphicon-cog"></i>
              General
            </span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#tabs-1-tab-2" role="tab" data-toggle="tab" aria-expanded="false">
            <span class="nav-link-in">
              <span class="glyphicon glyphicon-link"></span>
              Links
            </span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#tabs-1-tab-3" role="tab" data-toggle="tab" aria-expanded="false">
            <span class="nav-link-in">
              <i class="glyphicon glyphicon-random"></i>
              Integration
            </span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#tabs-1-tab-4" role="tab" data-toggle="tab">
            <span class="nav-link-in">
              <i class="glyphicon glyphicon-usd"></i>
              Payment
            </span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#tabs-1-tab-5" role="tab" data-toggle="tab">
            <span class="nav-link-in">
              <i class="glyphicon glyphicon-globe"></i>
              Social Media
            </span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#tabs-1-tab-6" role="tab" data-toggle="tab">
            <span class="nav-link-in">
              <i class="glyphicon glyphicon-envelope"></i>
              Emails
            </span>
          </a>
        </li>
      </ul>
    </div>
  </div><!--.tabs-section-nav-->

  <!-- GENERAL -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade active in" id="tabs-1-tab-1" aria-expanded="true">
      <table class="table table-bordered table-hover">
        <tbody>
          <% get_options([:site_name, :site_description, :enable_ads, :referral_percentage, :min_withdrawal_amount]).each do |option| %>
            <%= render 'form', option: option %>
          <% end %>
        </tbody>
      </table>
    </div><!--.tab-pane-->
    <!-- LINKS -->
    <div role="tabpanel" class="tab-pane fade" id="tabs-1-tab-2">
      <table class="table table-bordered table-hover">
        <tbody>
          <% get_options([:enable_banner_ads, :enable_popup_ads, :enable_mobile_ads, :display_home_shortening_box, :mass_shrinker_limit, :disallowed_domains, :alias_length]).each do |option| %>
            <%= render 'form', option: option %>
          <% end %>
        </tbody>
      </table>
    </div><!--.tab-pane-->
    <!-- INTEGRATION -->
    <div role="tabpanel" class="tab-pane fade" id="tabs-1-tab-3">
      <table class="table table-bordered table-hover">
        <tbody>
          <% get_options([:analytics_id, :recaptcha_public, :recaptcha_secret, :facebook_appid]).each do |option| %>
            <%= render 'form', option: option %>
          <% end %>
        </tbody>
      </table>
    </div><!--.tab-pane-->
    <!-- PAYMENT -->
    <div role="tabpanel" class="tab-pane fade" id="tabs-1-tab-4">
      <table class="table table-bordered table-hover">
        <tbody>
          <% get_options([:paydays, :currency_code, :currency_symbol, :enable_paypal, :enable_payza, :enable_payoneer, :enable_bitcoin, :enable_webmoney, :enable_skrill]).each do |option| %>
            <%= render 'form', option: option %>
          <% end %>
        </tbody>
      </table>
    </div><!--.tab-pane-->
    <!-- SOCIAL MEDIA -->
    <div role="tabpanel" class="tab-pane fade" id="tabs-1-tab-5">
      <table class="table table-bordered table-hover">
        <tbody>
          <% get_options([:facebook_url, :twitter_url, :googleplus_url]).each do |option| %>
            <%= render 'form', option: option %>
          <% end %>
        </tbody>
      </table>
    </div><!--.tab-pane-->
    <!-- EMAILS -->
    <div role="tabpanel" class="tab-pane fade" id="tabs-1-tab-6">
      <table class="table table-bordered table-hover">
        <tbody>
          <% get_options([:admin_email, :notifications_email, :support_email]).each do |option| %>
            <%= render 'form', option: option %>
          <% end %>
        </tbody>
      </table>
    </div><!--.tab-pane-->
  </div><!--.tab-content-->
</section>