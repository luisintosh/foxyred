<header class="section-header">
  <h1>Posts</h1>
</header>
<section class="card">
  <div class="card-block">
    <div id="toolbar-posts">
      <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
    </div>
    <table id="posts-ads"
        class="table table-striped table-bordered"
        data-toggle="table"
        data-toolbar="#toolbar-posts"
        data-search="true"
        data-show-refresh="true"
        data-show-toggle="true"
        data-show-columns="true"
        data-show-export="true"
        data-minimum-count-columns="2"
        data-show-pagination-switch="true"
        data-pagination="true"
        data-id-field="id"
        data-page-list="[10, 25, 50, 100, ALL]"
        data-show-footer="false">
        <thead>
        <tr>
          <th>Title</th>
          <th>Created on</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.created_at %></td>
            <td><%= link_to 'Show', post, class: 'btn btn-inline btn-primary' %>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-inline btn-primary' %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-inline btn-primary' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section><!--.box-typical-->