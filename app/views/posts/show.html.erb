<div class="card">
    <header class="card-header card-header-xxl">
        Show Post
        <%= link_to 'Back', posts_path, class: 'modal-close' %>
    </header>
    <div class="card-block">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Back', posts_path %>

    </div>
</div>