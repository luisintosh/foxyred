<header class="section-header">
  <h1>My Referrals</h1>
</header>
<section class="card">
  <div class="card-block">
    <table id="table-referrals"
          class="table table-striped table-bordered"
          data-toggle="table"
          data-toolbar="#toolbar-referrals"
          data-search="true"
          data-show-refresh="true"
          data-show-toggle="true"
          data-show-columns="true"
          data-show-export="true"
          data-minimum-count-columns="2"
          data-show-pagination-switch="true"
          data-pagination="true"
          data-id-field="id"
          data-page-list="[10, 25, 50, 100, ALL]"
          data-show-footer="false">
          <thead>
            <tr>
              <th>Name</th>
              <th>Earnings</th>
              <th>My Earnings</th>
            </tr>
          </thead>
          <tbody>
            <% @referrals.each do |r| %>
              <tr>
                <td><%= r.first_name %></td>
                <td><%= "#{@currency_symbol} #{r.balance.publisher_earnings.to_s} #{@currency_code}" %></td>
                <td><%= "#{@currency_symbol} #{(r.balance.publisher_earnings * (Option.get('referral_percentage') / 100)).to_s} #{@currency_code}" %></td>
              </tr>
            <% end %>
          </tbody>
    </table>
  </div>
</section><!--.box-typical-->
