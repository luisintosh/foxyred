<header class="section-header">
  <h1>Users</h1>
</header>
<section class="card">
  <div class="card-block">
    <p>
        <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-inline btn-primary' %>
        <%= link_to 'Back', users_path, class: 'btn btn-inline btn-primary' %>
    </p>

    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Attribute</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Email</td>
                        <td><%= @user.email %></td>
                    </tr>
                    <tr>
                        <td>Sign in count</td>
                        <td><%= @user.sign_in_count %></td>
                    </tr>
                    <tr>
                        <td>Last sign in at</td>
                        <td><%= @user.last_sign_in_at %></td>
                    </tr>
                    <tr>
                        <td>Last sign in IP</td>
                        <td><%= @user.last_sign_in_ip %></td>
                    </tr>
                    <tr>
                        <td>Role</td>
                        <td><%= @user.role %></td>
                    </tr>
                    <tr>
                        <td>Referred by</td>
                        <td><%= @user.referred_by %></td>
                    </tr>
                    <tr>
                        <td>Referral code</td>
                        <td><%= @user.referral_code %></td>
                    </tr>
                    <tr>
                        <td>First name</td>
                        <td><%= @user.first_name %></td>
                    </tr>
                    <tr>
                        <td>Last name</td>
                        <td><%= @user.last_name %></td>
                    </tr>
                    <tr>
                        <td>Address</td>
                        <td><%= @user.address %></td>
                    </tr>
                    <tr>
                        <td>Tel</td>
                        <td><%= @user.tel %></td>
                    </tr>
                    <tr>
                        <td>Withdrawal method</td>
                        <td><%= @user.withdrawal_method %></td>
                    </tr>
                    <tr>
                        <td>Withdrawal account</td>
                        <td><%= @user.withdrawal_account %></td>
                    </tr>
                    <tr>
                        <td>Total earnings</td>
                        <td><%= @user.withdrawals.where(status: :paid).sum(:amount) %></td>
                    </tr>
                    <tr>
                        <td>Pending payments</td>
                        <td><%= @user.withdrawals.where(status: :pending).sum(:amount) %></td>
                    </tr>
                    <tr>
                        <td>Total links</td>
                        <td><%= @user.links.count %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</section><!--.box-typical-->